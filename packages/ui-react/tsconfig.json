{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "incremental": true,
    "declarationDir": "dist",
    "rootDir": "./lib",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "declaration": true
  },
  "include": ["./lib/**/*"],
}
